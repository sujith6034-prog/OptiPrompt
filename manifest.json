{
  "manifest_version": 3,
  "name": "Universal Prompt Optimizer PRO",
  "version": "4.0",
  "description": "Advanced AI prompt optimizer with variations support. Works on ChatGPT, Claude, Gemini, Grok, DeepSeek, and more.",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://x.com/*",
    "https://twitter.com/*",
    "https://chat.deepseek.com/*",
    "https://poe.com/*",
    "https://perplexity.ai/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://x.com/*",
        "https://twitter.com/*",
        "https://chat.deepseek.com/*",
        "https://poe.com/*",
        "https://perplexity.ai/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}
